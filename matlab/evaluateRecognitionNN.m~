load('vision.mat');
load('dataset.mat');
source = '../images/';
 for i = 1:length(testPaths)
    img_path = [source, testPaths{4}];
    img = imread(img_path);
    wordMap = getVisualWords(img, dictionary);
    img_hist = getImageFeatures(wordMap, size(dictionary, 1));
    closest = pdist2(img_hist, trainFeatures);
    [M ind] = min(closest);
    
 end
